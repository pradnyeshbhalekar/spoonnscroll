<div class="dishes-container">
    @foreach (var recipe in recipes)
    {
        <a asp-page="/Details/Details" asp-route-id="@recipe.Id" class="dish-card">
            <div class="dish-image">
                <img src="@recipe.Image" alt="@recipe.Name">
            </div>
            <div class="dish-content">
                <h3 class="dish-title">@recipe.Name</h3>
                <p class="dish-description">@recipe.Description</p>
                <div class="dish-meta">
                    <span class="prep-time"><i class="fa fa-clock-o"></i> @recipe.Time</span>
                    <span class="servings"><i class="fa-regular fa-clock"></i> @recipe.Servings</span>
                </div>
            </div>
        </a>
    }
</div>
